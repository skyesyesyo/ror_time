<% content_for :title, 'Codingdojo Shoe Sale' %>

<% content_for :left do %>

<fieldset>
	<legend>Register</legend>
	<form action="/users" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

		<p>First Name: <input type="text" name="user[first_name]" id="first_name"></p>
		<p>Last Name: <input type="text" name="user[last_name]" id="last_name"></p>
		<p>Email: <input type="text" name="user[email]" id="Email"></p>
		<p>Password: <input type="password" name="user[password]" id="Password"></p>
		<p>Confirm PW: <input type="password" name="user[password_confirmation]"></p>
		<p><input type="submit" name="Register" value="Register"></p>

	</form>
</fieldset>

<% end %>

<!-- Login -->
<% content_for :right do %>

<fieldset>
	<legend>Log in</legend>
	<form action="/sessions" method="post">
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<p>Email: <input type="text" name="email" id="email"></p>
		<p>Password: <input type="password" name="password" id="password"></p>
		<p><input type="submit" name="Log In" value="Log In"></p>
		
	</form>
</fieldset>

<% end %>